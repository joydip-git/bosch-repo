<Window x:Class="wpf_RoutedEvents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_RoutedEvents"      
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid ButtonBase.Click="mainGrid_Click" x:Name="mainGrid">
    
        <Button HorizontalAlignment="Left" Margin="233,213,0,0" VerticalAlignment="Top" Width="224" Height="122" Name="btnClick" Click="btnClick_Click" Background="#7F64FFD1">
            <Button.Content>
                <Button x:Name="btnInner" Width="50" Height="30" VerticalAlignment="Center" Content="Inner Button" Click="btnInner_Click">
                </Button>

            </Button.Content>
        </Button>

    </Grid>
</Window>
