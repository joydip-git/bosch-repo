<Window x:Class="wpf_ResourcesBasic.UsingWindowResources"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_ResourcesBasic"
        mc:Ignorable="d"
        Title="UsingWindowResources" Height="450" Width="800">
    <Window.Resources>
        <ImageBrush x:Key="TileBrush" TileMode="Tile" Viewport="0 0 32 32" ViewportUnits="Absolute" Opacity="0.3" ImageSource="Images/happyface.png"></ImageBrush>
    </Window.Resources>
    <Grid>
        <!--<Button Content="Tiled Button" HorizontalAlignment="Left" Margin="86,38,0,0" VerticalAlignment="Top" Width="592" Height="83">
            <Button.Background>
                <Binding Source="{StaticResource TileBrush}"/>
            </Button.Background>
        </Button>-->

        <Button Content="Tiled Button" HorizontalAlignment="Left" Margin="86,38,0,0" VerticalAlignment="Top" Width="592" Height="83" Background="{StaticResource TileBrush}"/>
    </Grid>
</Window>
