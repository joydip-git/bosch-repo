<Window x:Class="wpf_Styles.SettingProperties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_Styles"
        mc:Ignorable="d"
        Title="SettingProperties" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="imgStyle">
            <Setter Property="Control.Background">
                <Setter.Value>
                    <ImageBrush ImageSource="Images/happyface.png" Viewport="0 0 32 32" ViewportUnits="Absolute" Opacity="0.3" TileMode="Tile"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Button Content="Image Style" HorizontalAlignment="Left" Margin="288,122,0,0" VerticalAlignment="Top" Width="215" Style="{StaticResource ResourceKey=imgStyle}" Height="88"/>

    </Grid>
</Window>
